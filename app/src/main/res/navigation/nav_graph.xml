<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.hfab.navigationlanguages.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_englishFragment"
            app:destination="@id/englishFragment" />
        <action
            android:id="@+id/action_mainFragment_to_spanishFragment"
            app:destination="@id/spanishFragment" />
        <action
            android:id="@+id/action_mainFragment_to_frenchFragment"
            app:destination="@id/frenchFragment" />
    </fragment>
    <fragment
        android:id="@+id/englishFragment"
        android:name="com.hfab.navigationlanguages.EnglishFragment"
        android:label="fragment_english"
        tools:layout="@layout/fragment_english" />
    <fragment
        android:id="@+id/spanishFragment"
        android:name="com.hfab.navigationlanguages.SpanishFragment"
        android:label="fragment_spanish"
        tools:layout="@layout/fragment_spanish" />
    <fragment
        android:id="@+id/frenchFragment"
        android:name="com.hfab.navigationlanguages.FrenchFragment"
        android:label="fragment_french"
        tools:layout="@layout/fragment_french" />
</navigation>